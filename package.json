{
  "name": "typhoon-test",
  "displayName": "Typhoon Test",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Typhoon Test",
      "properties": {
        "typhoon-test.lineSpacing": {
          "type": "integer",
          "default": 2,
          "minimum": 1,
          "description": "The number of blank lines to insert between top-level functions and classes"
        },
        "typhoon-test.apiWizardWorkspace": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "required": true
              },
              "type": {
                "type": "string",
                "enum": [
                  "class",
                  "module"
                ],
                "required": true
              },
              "alias": {
                "type": "string",
                "required": true
              }
            },
            "default": {},
            "description": "The module and class to display in the API wizard"
          }
        }
      }
    },
    "commands": [
      {
        "command": "typhoon-test.showDocstringView",
        "title": "Show Docstring"
      },
      {
        "command": "typhoon-test.showArgumentsView",
        "title": "Show Arguments View"
      },
      {
        "command": "typhoon-test.handleTreeViewItemClicked",
        "title": "Handle Tree View Item Clicked"
      },
      {
        "command": "typhoon-test.showApiOptions",
        "title": "Add module to list",
        "icon": "$(add)"
      },
      {
        "command": "typhoon-test.removeModule",
        "title": "Remove module from list",
        "icon": "$(remove)"
      },
      {
        "command": "typhoon-test.saveApiWizardWorkspace",
        "title": "Save API Wizard Workspace",
        "icon": "$(save)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "typhoon-test",
          "title": "Typhoon Test API Wizard",
          "icon": "$(rocket)"
        }
      ]
    },
    "views": {
      "typhoon-test": [
        {
          "id": "typhoon-test.pythonModuleView",
          "name": "Function List"
        },
        {
          "id": "typhoon-test.docstringView",
          "name": "Function Documentation",
          "type": "webview"
        },
        {
          "id": "typhoon-test.formView",
          "name": "Function Arguments",
          "type": "webview"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "typhoon-test.pythonModuleView",
        "contents": "Select a module to view its classes, methods, and functions"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "typhoon-test.showApiOptions",
          "when": "view == typhoon-test.pythonModuleView",
          "group": "navigation"
        },
        {
          "command": "typhoon-test.saveApiWizardWorkspace",
          "when": "view == typhoon-test.pythonModuleView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "typhoon-test.removeModule",
          "when": "view == typhoon-test.pythonModuleView && (viewItem == class || viewItem == module)",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "tree-sitter": "^0.21.0",
    "tree-sitter-python": "^0.21.0"
  }
}